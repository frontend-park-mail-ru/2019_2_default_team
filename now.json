{
    "version": 2,
    "name": "default_name",
    "alias": ["default-name"],
    "builds": [
        { "src": "package.json", "use": "@now/static-build", "config": { "distDir": "src" } },
        { "src": "server/server.js", "use": "@now/node-server" },
        { "src": "src/**", "use": "@now/static" }
    ],
    "routes": [
        { "src": "/", "dest": "src/index.html" },
        { "src": "/(.*)", "dest": "server/server.js" },
        { "src": "/(.*)", "dest": "src/$1" }
    ]
}