style
    include Filmpage.css
-var imgHref =  "https://static.karofilm.ru/uploads/film/desktop/90/38/b9/df8c1ab57507b6d31a6808fe1a.jpg"
-var videosrc="https://www.youtube.com/embed/4V_3YANA5Wc"

mixin film()
    .wrapper
        div(class="row")
            div(class="title")
                h1 #{title}
                p #{genre}
        div(class="row")
            div(class="column-left")
                img(src= imgHref)
            div(class="column-right")
                p
                    span.tip Продолжительность:
                    | #{length}
                p
                    span.tip Режиссёр:
                    |  #{director}
                p
                    span.tip Производство:
                    |  #{production}
                p
                    span.tip Год выпуска:
                    |  #{year}
                p
                    span.tip В ролях:
                    | #{mainactor}
                p
                    div
                        tr #{description}
                a(class= 'buyticket__button' href='#' data-step='session' data-film='4588' data-city='1') Купить билет
    .container
        div(class="row")
            h1 Trailers
        div(class="row film-trailer")
            iframe(src=videosrc, allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture', allowfullscreen='', width='560', height='315', frameborder='0')
    .wrapper.container
        h1 Booking
        h2 Пожалуйста, выберите место:
        table.tbl
            for row, idx in [1,2,3,4,5,6]
                tr
                    for seat in row
                        td
                            if seat != null
                                button.cell(onclick="document.seatNumber = " + seat + ";")= seat
        button#bookBtn Забронировать


+film(imgHref, videosrc)
