style
    include Filmpage.css
-var imgHref =  "/img/1_0.jpg"
-var videosrc="https://www.youtube.com/embed/4V_3YANA5Wc"

mixin film()
    .wrapper
        div(class="row")
            div(class="title")
                h1 #{title}
                p #{genre}
        div(class="row")
            div(class="column-left")
                img(src= imgHref)
            div(class="column-right")
                p
                    span.tip Продолжительность:
                    | #{length}
                p
                    span.tip Режиссёр:
                    |  #{director}
                p
                    span.tip Производство:
                    |  #{production}
                p
                    span.tip Год выпуска:
                    |  #{year}
                p
                    span.tip В ролях:
                    | #{mainactor}
                p
                    div
                        tr #{description}
                button#buyTicketButton Купить билет
    .container
        div(class="row")
            h1 Trailers
        div(class="row film-trailer")
            iframe(src=videosrc, allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture', allowfullscreen='', width='560', height='315', frameborder='0')


+film(imgHref, videosrc)
