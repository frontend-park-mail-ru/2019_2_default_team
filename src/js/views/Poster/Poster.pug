style
    include Poster.css

-var href ="https://static.karofilm.ru/uploads/film/desktop/e3/b6/4b/5215d5811b80298172dad73fd1.jpg"
-var filmPath = '/film/${items[0].id}'

mixin card-deck(href, title, genre, id)
    div(class='card')
        div(class='card-item')
            img(src= href)
        div(class = "card-item-blur" src = href)
            h1 #{title}
            a(onclick= `film/${id}` href= `film/${id}` data-section="films") Подробнее

div.container
    table
        tr
            th
                a(id = 'today' onclik = '/allfilms&today' href= '/allfilms&today') Сегодня
            th
                a(id = 'upcoming' onclik = '/allfilms&upcoming' href= '/allfilms&upcoming') Скоро
            th(style="float: none")
                form(id = 'search')
                    input(id = 'search-input' type='text' style= "float: right"  placeholder= "Поиск")
    .body
        each val in items
            +card-deck(href, val.title, val, val.id)
